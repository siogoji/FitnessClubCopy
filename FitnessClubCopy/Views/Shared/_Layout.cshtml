<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FitnessClub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FitnessClub.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="header-area header-sticky">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <a href="index.html" class="logo" id="top-link">Fitness<em> Club</em></a>
                        <ul class="nav">
                            <li class="scroll-to-section"><a asp-controller="Home" asp-action="Index" class="active">@Localizer["Головна"]</a></li>
                            <li class="scroll-to-section"><a asp-controller="Home" asp-action="Classes">@Localizer["Заняття"]</a></li>
                            <li class="scroll-to-section"><a asp-controller="Crud" asp-action="Tickets">@Localizer["Абонементи"]</a></li>
                            <li class="scroll-to-section"><a asp-controller="Home" asp-action="Trainers">@Localizer["Тренери"]</a></li>
                            <li class="scroll-to-section"><a asp-controller="Home" asp-action="Schedule">@Localizer["Графік"]</a></li>
                            <li class="scroll-to-section"><a asp-controller="Home" asp-action="Contacts">@Localizer["Контакти"]</a></li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                string userName = User.Identity.Name;
                                if (userName.Length > 5)
                                {
                                    userName = userName.Substring(0, 5) + "...";
                                }
                                <li class="scroll-to-section user-info"><a asp-controller="Crud" asp-action="UserTickets">@userName</a></li>
                                <li><a href="/UserAuthentication/Logout">@Localizer["Вихід"]</a></li>
                            }
                            else
                            {
                                <li><a href="/UserAuthentication/Login">@Localizer["Вхід"]</a></li>
                            }
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @Thread.CurrentThread.CurrentUICulture.Name
                                </a>


                                <ul class=" dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="/?culture=uk">Uk</a></li>
                                    <li><a class="dropdown-item" href="/?culture=en">En</a></li>
                                </ul>
                            </li>
                        </ul>
                        <a class='menu-trigger'>
                            <span>Menu</span>
                        </a>
                    </nav>
                </div>
            </div>
        </div>
    </header>

    <main role="main" class="pb-3">
        <div>@RenderBody()</div>
    </main>


    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <p>
                      @Localizer["Номери телефону для зв'язку"]: +380971820167 | +380671840199
                    </p>
                </div>
            </div>
        </div>
    </footer>
    <!-- Bootstrap -->
    <script src="~/js/popper.js"></script>
    <script src="~/js/bootstrap.min.js"></script>

    <!-- Plugins -->
    <script src="~/js/scrollreveal.min.js"></script>
    <script src="~/js/waypoints.min.js"></script>
    <script src="~/js/jquery.counterup.min.js"></script>
    <script src="~/js/imgfix.min.js"></script>
    <script src="~/js/mixitup.js"></script>
    <script src="~/js/accordions.js"></script>
    <script src="~/js/site.js"></script>



    <!-- Global Init -->
    <script src="~/js/custom.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


