@{
    ViewData["Title"] = "Абонементи";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}



<section class="section" id="abonements">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="section-heading">
                    <h2>Абонементи</h2>
                    <img src="images/line-dec.png" alt="">
                    <p>Оберіть підходящий абонемент для ваших потреб</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
            @if (User.IsInRole("admin"))
            {   
                <p>
                    <a asp-action="Create" class="btn btn-success">Додати абонемент</a>
                </p>
            }
            <div class="mt-3">
            @foreach (var ticket in Model)
            {
                <div class="col-12">
                    <div class="card mb-3">
                        <div class="row no-gutters">
                            <div class="col-md-2 poster">
                                @if (ticket.Photo != null)
                                {
                                    <img src="data:image;base64,@(Convert.ToBase64String(ticket.Photo))" alt="Ticket Photo" class="img-fluid" />
                                }
                            </div>
                            <div class="col-md-10">
                                <div class="card-body d-flex flex-column justify-content-between h-100">
                                    <div>
                                        <h3 class="card-title">Назва: @ticket.Type</h3>
                                        <h4 class="card-title">Період: @ticket.Period </h4>
                                        <h5 class="card-title">Ціна: @ticket.Price</h5>
                                        <p class="card-text text-justify">Опис: @ticket.Description</p>
                                    </div>
                                    <div class="d-flex justify-content-between mt-3">
                                        <div>
                                        @if (User.IsInRole("admin"))
                                        {
                                            <a asp-action="Edit" asp-controller="Crud" asp-route-id="@ticket.TicketId" class="btn btn-warning">Редагувати</a>
                                            <button class="btn btn-danger" onclick="confirmDelete(@ticket.TicketId)" style="margin-right: 10px;">Видалити</button>                                                  
                                        }
                                        else if (User.IsInRole("user"))
                                        {
                                            <a asp-action="Buy" asp-controller="Crud" asp-route-id="@ticket.TicketId" class="btn btn-primary">Купити</a>
                                        }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>      
                
            }
        </div>
    </div>
</div>
</div>
</section>

    
<script>
    function confirmDelete(trainerId) {
        window.location.href = "/Crud/Delete/" + trainerId;
    }
</script>

