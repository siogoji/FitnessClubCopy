@model FitnessClubCopy.Models.Ticket

@{
    ViewData["Title"] = "Додати";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<section class="section" id="abonements">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="section-heading">
                    <h2>@Localizer["Додання нового абонемента"]</h2>
                </div>
            </div>
        </div>
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="form-group mt-2">
                <label asp-for="Type">@Localizer["Тип"]</label>
                <input asp-for="Type" class="form-control" />
            </div>
            <div class="form-group mt-2">
                <label asp-for="Period">@Localizer["Період"]</label>
                <input asp-for="Period" class="form-control" />
            </div>
            <div class="form-group mt-2">
                <label asp-for="Price">@Localizer["Ціна"]</label>
                <input asp-for="Price" class="form-control" />
            </div>
            <div class="form-group mt-2">
                <label asp-for="Description">@Localizer["Опис"]</label>
                <textarea asp-for="Description" class="form-control" maxlength="2500" rows="4"></textarea>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Photo">@Localizer["Фото"]</label>
                <input asp-for="Photo" type="file" class="form-control" />
            </div>
            <div class="form-group mt-2">
                <button type="submit" class="btn btn-primary">@Localizer["Додати"]</button>
            </div>
        </form>
        </div>
</section>
