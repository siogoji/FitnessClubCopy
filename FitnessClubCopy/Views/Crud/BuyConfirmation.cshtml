@model FitnessClubCopy.Models.Ticket

@{
    ViewData["Title"] = "Підтвердження купівлі";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<section class="section" id="abonements">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="section-heading">
                    <h2>Підтвердження купівлі</h2>
                </div>
            </div>
        </div>
    <div class="row">
        <div class="col-12">Тип: @Model.Type</div>

        <div class="col-12">Період: @Model.Period</div>

        <div class="col-12">Ціна: @Model.Price</div>

        <div class="col-12">Опис: @Model.Description</div>       
    </div>
    <form asp-action="UserTickets" asp-controller="Crud" method="post">
        <input type="hidden" name="id" value="@Model.TicketId" />
        <button type="submit" class="btn btn-primary mt-2">Купити</button>
    </form>
    </div>
</section