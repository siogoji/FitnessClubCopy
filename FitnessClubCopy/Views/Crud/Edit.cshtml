@model FitnessClubCopy.Models.Ticket

@{
    ViewData["Title"] = "Редагувати";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<section class="section" id="abonements">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="section-heading">
                    <h2>Редагувати</h2>
                </div>
            </div>
        </div>
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="TicketId" />
            <div class="form-group mt-2">
                <label asp-for="Type"></label>
                <input asp-for="Type" class="form-control" />
            </div>
            <div class="form-group mt-2">
                <label asp-for="Period"></label>
                <input asp-for="Period" class="form-control" />
            </div>
            <div class="form-group mt-2">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
            </div>
            <div class="form-group mt-2">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
            </div>
            <div class="form-group mt-2">
                <label asp-for="Photo"></label>
                <input asp-for="Photo" type="file" class="form-control" />
            </div>
            <div class="form-group mt-2">
                <button type="submit" class="btn btn-primary">Зберегти зміни</button>
            </div>
        </form>
    </div>
</section>
