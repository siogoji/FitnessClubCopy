@model FitnessClubCopy.Models.Ticket

@{
    ViewData["Title"] = "Редагувати";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FitnessClub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FitnessClub.styles.css" asp-append-version="true" />
</head>
<body>

<header class="header-area header-sticky" style="background-color: black;">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav class="main-nav">
                    <!-- ***** Logo Start ***** -->
                    <a href="index.html" class="logo">Training<em> Studio</em></a>
                    <!-- ***** Logo End ***** -->
                    <!-- ***** Menu Start ***** -->
                    <ul class="nav">
                        <li class="scroll-to-section"><a asp-controller="Home" asp-action="Index" class="active">Головна</a></li>
                        <li class="scroll-to-section"><a asp-controller="Home" asp-action="Index">Про нас</a></li>
                        <li class="scroll-to-section"><a asp-controller="Home" asp-action="Classes">Заняття</a></li>
                        <li class="scroll-to-section"><a asp-controller="Crud" asp-action="Tickets">Абонементи</a></li>
                        <li class="scroll-to-section"><a asp-controller="Home" asp-action="Schedule">Графік</a></li>
                        <li class="scroll-to-section"><a asp-controller="Home" asp-action="Index">Контакти</a></li>
                            <li class="main-button"><a href="/UserAuthentication/Login">Sign Up</a></li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li><a href="/UserAuthentication/Logout">Logout</a></li>
                            }
                    </ul>
                    <a class='menu-trigger'>
                        <span>Menu</span>
                    </a>
                    <!-- ***** Menu End ***** -->
                </nav>
            </div>
        </div>
    </div>
</header>


<section class="section" id="abonements">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="section-heading">
                    <h2>Редагувати</h2>
                </div>
            </div>
        </div>
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="TicketId" />
            <div class="form-group mt-2">
                <label asp-for="Type"></label>
                <input asp-for="Type" class="form-control" />
            </div>
            <div class="form-group mt-2">
                <label asp-for="Period"></label>
                <input asp-for="Period" class="form-control" />
            </div>
            <div class="form-group mt-2">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
            </div>
            <div class="form-group mt-2">
                <button type="submit" class="btn btn-primary">Зберегти зміни</button>
            </div>
        </form>
    </div>
</section>
<footer id="tickets-footer">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <p>
                    Номери телефону для зв'язку: +380971820167 | +380671840199
                </p>
            </div>
        </div>
    </div>
</footer>
</body>
</html>