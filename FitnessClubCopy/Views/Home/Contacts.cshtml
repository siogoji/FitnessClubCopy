@{
    ViewData["Title"] = "Контакти";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<section class="section" id="contact-us" style="background-image: url('images/contact-bg.jpg'); background-size: cover; background-position: center;">
    <div class="container-fluid">
        <div class="section-heading-contact">
            <h2>Контактна інформація</h2>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-6 col-xs-12">
                <div id="contact-form-container">
                    <div class="contact-form">
                        <form id="contact" action="@Url.Action("ProcessFormContacts", "Contact")" method="post" style="background-color: #e5e1ed;">
                            <div class="row">
                                <div class="col-md-6 col-sm-12">
                                    <fieldset>
                                        <input name="name" type="text" id="name" placeholder="Ім'я" required="">
                                    </fieldset>
                                </div>
                                <div class="col-md-6 col-sm-12">
                                    <fieldset>
                                        <input name="email" type="text" id="email" placeholder="Пошта" required="">
                                    </fieldset>
                                </div>
                                <div class="col-md-12 col-sm-12">
                                    <fieldset>
                                        <input name="SubjectOfMessage" type="text" id="subject" placeholder="Тема повідомлення">
                                    </fieldset>
                                </div>
                                <div class="col-lg-12">
                                    <fieldset>
                                        <textarea name="message" rows="6" id="message" placeholder="Повідомлення" required=""></textarea>
                                    </fieldset>
                                </div>
                                <div class="col-lg-12">
                                    <fieldset>
                                        <button type="submit" id="form-submit" class="main-button">Надіслати повідомлення</button>
                                    </fieldset>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>