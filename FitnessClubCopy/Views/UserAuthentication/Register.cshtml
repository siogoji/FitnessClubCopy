@model FitnessClubCopy.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Реєстрація";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<section class="section" id="abonements">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="section-heading">
                    <h2>@Localizer["Реєстрація"]</h2>
                </div>
            </div>
        </div>
        <form asp-action="Register" method="post" class="reg-form">
            <div class="form-group">
                <label>@Localizer["Ваше ім'я"]</label>
                <input type="text" class="form-control" asp-for="Name" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>

            <div class="form-group">
                <label>@Localizer["Логін"]</label>
                <input type="text" class="form-control" asp-for="Username" />
                <span class="text-danger" asp-validation-for="Username"></span>
            </div>

            <div class="form-group">
                <label>@Localizer["Електронна пошта"]</label>
                <input type="text" class="form-control" asp-for="Email" />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <div class="form-group">
                <label>@Localizer["Пароль"]</label>
                <input type="password" class="form-control" asp-for="Password" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <div class="form-group">
                <label>@Localizer["Підтвердження паролю"]</label>
                <input type="password" class="form-control" asp-for="PasswordConfirm" />
                <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
            </div>

            @if (TempData["msg"] != null)
            {
                <div class="form-group">
                    <span class="text-info">@TempData["msg"]</span>
                </div>
            }
   
            <button type="submit" class="btn btn-info">@Localizer["Реєстрація"]</button>               
            <a class="text-alert" href="/UserAuthentication/Login">@Localizer["Вже маєте акаунт? Увійти"]</a>
        </form>
    </div>
</section>

   